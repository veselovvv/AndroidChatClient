<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="image_view_chat_details">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.05</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="message_item">
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:maxWidth">250dp</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="message_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:ellipsize">none</item>
        <item name="android:maxLines">100</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <style name="message_item_date">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">end</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="photo_image_view">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="button">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
        <item name="android:background">@drawable/rounded_button</item>
    </style>

    <style name="wide_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
    </style>

    <style name="large_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>

    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>
</resources>